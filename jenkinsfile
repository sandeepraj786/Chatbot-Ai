pipeline {
    agent any
    stages {
	    stage('SCM Checkout'){
             steps{    
		    git 'https://github.com/sandeepraj786/Chatbot-Ai.git'
		 }
	    }
            stage('Run Ansible playbook') {
               steps {
                     sh 'rsync -avh -e "ssh -o StrictHostKeyChecking=no -i /var/lib/jenkins/Test1234.pem" --exclude .git /var/lib/jenkins/workspace/Chatbot-Ai/ ec2-user@172.31.18.57:/'
                     sh 'ssh -i /var/lib/jenkins/Test1234.pem  ec2-user@172.31.18.57 ansible-playbook ansible.yml'
	             
         }
       }
    }
}
	    
